<div class="twytte-form-container">
    <a href="/twytter/dashboard" class="btn">Voltar</a>
    <form action="/twytter/edit" method="POST">
    <h1>Editar twytte</h1>
    <input type="hidden" name="id" id="{{twytte.id}}">
        <div class="form-control">
            <label for="title"></label>
            <input type="text" name="title" placeholder="Escreva seu twytte..." value="{{twytte.title}}">
        </div>
        <input type="submit" value="Editar">
    </form>
</div>